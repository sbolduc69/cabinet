.wrapper_with_padding
  #docs.clearfix
    - unless @docs.blank?
      - @docs.each do |doc|
        %a{ href: (url_for [doc])}
          .doc
            %p.title= doc.title
            %p= time_ago_in_words(doc.created_at)
            %p= truncate(doc.content, length:50)
    - else
      %h2 Create Doc!
      %p Start creating documents and organizing you life!
      %button = link_to "Create Doc", new_doc_path


